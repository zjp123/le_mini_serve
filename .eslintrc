{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 8 // 这个非常重要
  },
  // "parserOptions": {
  //   "sourceType": "module"
  // },
  // "parser": "babel-eslint",
  // "parserOptions": {
  //     "sourceType": "script"
  // },
  "env":{
    "node":true,
    "es6":true
  },
  "rules": {
      "semi": ["error", "always"],
      "quotes": "off",
      "no-console":"off",
      "no-unused-vars":"off",
      "no-unreachable":"off",
      "no-redeclare":"warn"
  }
}

